<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:onClick="songPicked"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/img_ripple"
    >


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/songalbumart"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="7dp" />

    <TextView
        android:layout_width="290dp"
        android:layout_height="30dp"
        android:text="New Text"
        android:id="@+id/song_title"
        android:maxLines="1"
        android:textSize="16sp"
        android:textColor="#FFFF"

        android:layout_toRightOf="@+id/songalbumart"
        android:layout_toEndOf="@+id/songalbumart" />

    <TextView
        android:layout_width="290dp"
        android:layout_height="20dp"
        android:text="New Text"
        android:id="@+id/song_artist"
        android:layout_below="@+id/song_title"
        android:layout_alignLeft="@+id/song_title"
        android:layout_alignStart="@+id/song_title"
        android:textSize="13sp"
        android:textColor="#757575"

        android:layout_toRightOf="@id/songalbumart"/>
</RelativeLayout>


